{
  "name": "thread",
  "version": "0.0.1",
  "description": "calendars made easy",
  "default_locale": "en",
  "manifest_version" : 2,
  "browser_action": {
    "default_icon":  "icons/icon.png",
    "default_title": "thread",
    "default_popup": "lib/popup/index.html"
  },

  "options_page": "lib/options/index.html",

  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*", 
        "http://mail.google.com/*"
      ],
      "js": [
        "lib/zepto.js",
        "app.js"
      ],
      "run_at": "document_end"
    }
  ],
  
  "permissions": [
    "tabs",
    "http://mail.google.com/*",
    "https://mail.google.com/",
    "http://localhost:3000/",
    "http://thread.herokuapp.com/",
    "http://proto.thread.is/"
  ],


  "web_accessible_resources" : [ 
    "lib/zepto.js",
    "styles/main.css", 
    "app.js"
  ]
}
